<%= render "shared/menu" %>

<div id="newUser" class="col-md-12">
  <div class="main" style="height: 300px;">
  	<h1 class="col-md-offset-1">Login to your profile</h1>
    <div class="col-md-2"></div>
    <div class="col-md-6">
		<div class= "Sign_Form">
			<%= form_tag('login_attempt', method: 'post') do %>
      		<div class="row">
				<div class="col-md-6">
					<label>Email:</label> 
				</div>
				<div class="col-md-6">
					<%= text_field_tag(:username_or_email) %>
				</div>
			</div>
			<div class="clearfix"></div>
      		<div class="row">
				<div class="col-md-6">
					<label>Password:</label>
				</div>
				<div class="col-md-6">
					 <%= password_field_tag :login_password %>
				</div> 
			<div class="clearfix"></div>
      		<div class="row">
      			<div class="col-md-6"></div> 
        		<div class="col-md-6">
					<%= submit_tag :login, :class => "btn btn-default", :style => "margin-top: 10px;
" %>
				</div>
			</div>
			<% end %>
		</div>
    </div>
  </div>
  <div class="col-md-4">
  	<%= render "shared/logged_out" %>
  </div>
</div>

</div>
