<%= render "shared/menu" %>

<div id="newUser" class="col-md-12">
  <div class="col-md-offset-3 col-md-6 main">
    <h1>Farmers Market Sign up!</h1>
    <div class="col-md-offset-2 col-md-6">
    <%= form_for :user, url: users_path do |f| %>
      <div class="row">
        <div class="col-md-6">
          <label>Enter your email:</label>
        </div>
        <div class="col-md-6">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-md-6">
          <label>Password:</label>
        </div>
        <div class="col-md-6">
          <%= f.password_field :password%>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-md-6">
          <label>Repeat Password:</label> 
        </div>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation%>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="col-md-offset-6 col-md-6">
          <%= f.submit :Signup, :class => 'btn btn-default' %>
        </div>
      </div>
      <div class="clearfix"></div>
    <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <%= render "shared/logged_out" %>
  </div>
</div>